// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma" // Required for TiDB Cloud
}

// ==================== AUTHENTICATION ====================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String    // Hashed password
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  sessions      Session[]
  attempts      QuestionAttempt[]
  spacedReps    SpacedRepetition[]
  errorNotebook ErrorNotebook[]
  studyPlans    StudyPlan[]
  studySessions StudySession[]
  customSubjects CustomSubject[]
  chatMessages  ChatMessage[]
  learningProfile UserLearningProfile?
  mockInterviews MockInterview[]
  
  @@index([email])
  @@map("users")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  expires      DateTime
  sessionToken String   @unique
  accessToken  String?  @db.Text
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("sessions")
}

// ==================== QUESTIONS & PROGRESS ====================

model Question {
  id            String   @id // e.g., "genai-001" or "custom-abc123-001"
  subject       String   // GenAI, CppOOP, DBMS, OS, PythonML, or custom subject ID
  topic         String
  difficulty    String   // Easy, Medium, Hard
  questionText  String   @db.Text
  optionsJson   String   @db.Text // JSON array of options
  correctAnswer String   // A, B, C, or D
  rationale     String   @db.Text
  isCustom      Boolean  @default(false)
  customSubjectId String?
  createdBy     String?  // userId for custom questions
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  attempts      QuestionAttempt[]
  spacedReps    SpacedRepetition[]
  errorNotebook ErrorNotebook[]
  customSubject CustomSubject? @relation(fields: [customSubjectId], references: [id], onDelete: Cascade)
  
  @@index([subject])
  @@index([difficulty])
  @@index([topic])
  @@index([isCustom])
  @@index([customSubjectId])
  @@index([createdBy])
  @@map("questions")
}

model QuestionAttempt {
  id             String   @id @default(cuid())
  userId         String
  questionId     String
  selectedAnswer String   // A, B, C, or D
  isCorrect      Boolean
  confidence     String?  // "very", "somewhat", "guessing"
  timeSpent      Int?     // milliseconds
  attemptedAt    DateTime @default(now())
  
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([questionId])
  @@index([attemptedAt])
  @@map("question_attempts")
}

// ==================== SPACED REPETITION ====================

model SpacedRepetition {
  id                  String   @id @default(cuid())
  userId              String
  questionId          String
  easeFactor          Float    @default(2.5) // SuperMemo SM-2 algorithm
  interval            Int      @default(1)   // days until next review
  repetitions         Int      @default(0)   // consecutive correct answers
  nextReviewDate      DateTime
  lastReviewedAt      DateTime @default(now())
  consecutiveCorrect  Int      @default(0)
  consecutiveWrong    Int      @default(0)
  
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questionId])
  @@index([userId])
  @@index([nextReviewDate])
  @@index([questionId])
  @@map("spaced_repetition")
}

// ==================== ERROR TRACKING ====================

model ErrorNotebook {
  id              String   @id @default(cuid())
  userId          String
  questionId      String
  incorrectCount  Int      @default(1)
  lastIncorrectAt DateTime @default(now())
  isResolved      Boolean  @default(false)
  resolvedAt      DateTime?
  notes           String?  @db.Text
  
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  question Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  
  @@unique([userId, questionId])
  @@index([userId])
  @@index([isResolved])
  @@index([questionId])
  @@map("error_notebook")
}

// ==================== STUDY PLANS ====================

model StudyPlan {
  id                    String   @id @default(cuid())
  userId                String
  planType              String   @default("ai-generated") // "ai-generated" or "custom"
  weekNumber            Int      // Week 1, 2, 3, etc.
  startDate             DateTime
  endDate               DateTime
  focusAreas            String   @db.Text // JSON array of weak topics
  goals                 String   @db.Text // JSON array of goals
  aiInsights            String   @db.Text // AI-generated insights about weak areas
  customPrompt          String?  @db.Text // User's custom plan request
  isActive              Boolean  @default(true)
  completedTaskCount    Int      @default(0)
  totalTaskCount        Int      @default(0)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  user  User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks StudyPlanTask[]
  
  @@index([userId])
  @@index([isActive])
  @@index([weekNumber])
  @@index([planType])
  @@map("study_plans")
}

model StudyPlanTask {
  id              String   @id @default(cuid())
  studyPlanId     String
  title           String
  description     String   @db.Text
  taskType        String   // "learn", "practice", "review"
  subject         String
  topic           String
  targetCount     Int      // e.g., 20 questions
  currentProgress Int      @default(0)
  isCompleted     Boolean  @default(false)
  completedAt     DateTime?
  orderIndex      Int      // Order in the plan
  estimatedMinutes Int     // Estimated time to complete
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  studyPlan StudyPlan @relation(fields: [studyPlanId], references: [id], onDelete: Cascade)
  
  @@index([studyPlanId])
  @@index([isCompleted])
  @@map("study_plan_tasks")
}

model StudySession {
  id                String   @id @default(cuid())
  userId            String
  startedAt         DateTime @default(now())
  endedAt           DateTime?
  questionsAnswered Int      @default(0)
  correctAnswers    Int      @default(0)
  totalTimeSpent    Int      @default(0) // milliseconds
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([startedAt])
  @@map("study_sessions")
}

// ==================== CUSTOM QUIZZES ====================

model CustomSubject {
  id            String   @id @default(cuid())
  userId        String
  name          String   // User-provided name
  description   String   @db.Text // Original user prompt
  status        String   @default("pending") // pending, generating, ready, failed, cancelled
  questionCount Int      @default(0) // Current number of questions
  targetCount   Int      // Target number (10, 30, or 50)
  progress      Int      @default(0) // Progress percentage (0-100)
  keywords      String?  @db.Text // JSON array of extracted keywords
  errorMessage  String?  @db.Text // If failed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions Question[]
  
  @@index([userId])
  @@index([status])
  @@map("custom_subjects")
}

// ==================== ADAPTIVE CHATBOT ====================

model ChatMessage {
  id              String   @id @default(cuid())
  userId          String
  role            String   // "user" or "assistant"
  content         String   @db.Text
  topic           String?  // Detected topic (GenAI, DBMS, etc.)
  complexity      String?  // "beginner", "intermediate", "advanced"
  isFollowUp      Boolean  @default(false) // If asking clarification
  sessionId       String?  // Group messages by session
  responseTime    Int?     // Time taken to generate response (ms)
  createdAt       DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionId])
  @@index([createdAt])
  @@index([topic])
  @@map("chat_messages")
}

model UserLearningProfile {
  id                      String   @id @default(cuid())
  userId                  String   @unique
  learningPace            String   @default("medium") // "slow", "medium", "fast"
  preferredStyle          String   @default("balanced") // "simple", "balanced", "technical"
  avgQuestionsPerTopic    Float    @default(3.0)
  avgFollowUpsPerTopic    Float    @default(1.0)
  comprehensionIndicator  Float    @default(0.5) // 0-1 scale
  totalInteractions       Int      @default(0)
  frequentTopics          String?  @db.Text // JSON array of topics
  difficultyPreference    String?  // Topics user prefers
  lastInteractionAt       DateTime?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@map("user_learning_profiles")
}

// ==================== MOCK INTERVIEWS ====================

model MockInterview {
  id                  String    @id @default(cuid())
  userId              String
  subject             String    // DBMS, OS, GenAI, etc.
  difficulty          String    // Junior, Mid-level, Senior
  role                String    // Backend, Full-stack, ML Engineer
  status              String    // in-progress, completed, abandoned
  mode                String    @default("voice") // "text" or "voice"
  interviewerProfile  String?   // "friendly", "professional", "challenging"
  startedAt           DateTime  @default(now())
  completedAt         DateTime?
  duration            Int?      // seconds
  
  // Overall scores
  overallScore        Float?    // 0-100
  technicalAccuracy   Float?    // 0-100
  communicationScore  Float?    // 0-100
  depthScore          Float?    // 0-100
  confidenceScore     Float?    // 0-100
  
  // Voice-specific metrics
  avgSpeakingPace     Float?    // words per minute
  totalFillerWords    Int?
  totalSpeakingTime   Int?      // seconds
  longestPause        Int?      // seconds
  
  feedback            String?   @db.Text
  
  user                User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  questions           MockInterviewQuestion[]
  
  @@index([userId])
  @@index([status])
  @@index([subject])
  @@map("mock_interviews")
}

model MockInterviewQuestion {
  id                  String    @id @default(cuid())
  interviewId         String
  questionNumber      Int       // 1, 2, 3...
  question            String    @db.Text
  userAnswer          String?   @db.Text
  transcriptRaw       String?   @db.Text  // Raw speech-to-text
  isFollowUp          Boolean   @default(false)
  parentQuestionId    String?   // If this is a follow-up
  
  // Evaluation
  technicalScore      Float?    // 0-100
  clarityScore        Float?    // 0-100
  depthScore          Float?    // 0-100
  confidenceScore     Float?    // 0-100
  
  // Voice metrics
  speakingDuration    Int?      // seconds
  wordsPerMinute      Float?
  fillerWordCount     Int?
  pauseCount          Int?
  longestPause        Int?      // seconds
  
  feedback            String?   @db.Text
  strengths           String?   @db.Text // JSON array
  weaknesses          String?   @db.Text // JSON array
  
  createdAt           DateTime  @default(now())
  
  interview           MockInterview @relation(fields: [interviewId], references: [id], onDelete: Cascade)
  
  @@index([interviewId])
  @@map("mock_interview_questions")
}
